<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbg2"
    android:orientation="vertical"
    android:gravity="center"
    style="?android:attr/borderlessButtonStyle"
    tools:context=".BeginnerWorkoutsAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BBBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:drawableTint="@color/black"
            android:text="Back"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BEGINNER"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:gravity="right|center"
            android:textStyle="italic"
            android:layout_marginRight="20dp"
            android:textSize="27dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/BWD1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:foreground="@drawable/bd1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true" />


        <androidx.cardview.widget.CardView
            android:id="@+id/BWD2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:foreground="@drawable/bd2"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/BWD3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:foreground="@drawable/bd3"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/BWD4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:foreground="@drawable/bd4"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/BWD5"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:foreground="@drawable/bd5"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/BWD6"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:foreground="@drawable/bd6"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/BWD7"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:foreground="@drawable/bd7"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:visibility="invisible"></TextView>
    </LinearLayout>
    </LinearLayout>

</ScrollView>