<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="300dp"
        android:layout_height="88dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/untitled" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70sp"
        android:fontFamily="sans-serif"
        android:text="@string/you_re_stronger_than_you_think"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/SigninTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:fontFamily="sans-serif"
        android:text="SIGN IN"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/EmailTV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="EMAIL"
        android:textAlignment="center"
        android:textColor="#EC5959"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EmailET1"
        android:layout_width="300sp"
        android:layout_height="48dp"
        android:layout_marginBottom="40sp"
        android:autofillHints=""
        android:backgroundTint="#7E7E7E"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:drawableTint="@color/black"
        android:ems="10"
        android:hint="example@email.com"
        android:inputType="textEmailAddress"
        android:outlineSpotShadowColor="@color/black"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:visibility="visible" />

    <TextView
        android:id="@+id/PasswordTV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="PASSWORD"
        android:textAlignment="center"
        android:textColor="#EC5959"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/PasswordET1"
        android:layout_width="300sp"
        android:layout_height="48dp"
        android:layout_marginBottom="50sp"
        android:autofillHints=""
        android:backgroundTint="#7E7E7E"
        android:drawableStart="@android:drawable/ic_lock_lock"
        android:drawableTint="@color/black"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="**************"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/SigninButton1"
        android:layout_width="300sp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/SignupButton1"
        android:layout_width="300sp"
        android:layout_height="55dp"
        android:backgroundTint="@color/white"
        android:text="CREATE AN ACCOUNT"
        android:textColor="@color/black"
        android:textStyle="bold" />


</LinearLayout>